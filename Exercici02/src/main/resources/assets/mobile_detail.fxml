<VBox style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.MobileDetailController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: rgb(107, 196, 255);">
         <children>
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#goBack" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="â†" />
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Detalle" />
