                  <ImageView fx:id="detailImage" fitHeight="200.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="detailTitle" style="-fx-font-size: 22px; -fx-font-weight: bold;" textAlignment="CENTER" wrapText="true" />
